# Flutterwave Configuration
FLW_SECRET_KEY=FLWSECK-your-secret-key-here
FLW_PUBLIC_KEY=FLWPUBK-your-public-key-here
FLW_ENCRYPTION_KEY=your-encryption-key-here
FLW_SECRET_HASH=your-webhook-secret-hash

# Backend Configuration
BACKEND_URL=https://your-backend-url.com
PORT=3000
NODE_ENV=development

# Database
MONGODB_URI=mongodb://localhost:27017/flutterwave_airtime

# App Configuration
